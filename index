  <script>
    function checkAnswer1() {
      const input = document.getElementById('answer1').value.trim().toLowerCase();
      const result = document.getElementById('resultMessage');
      const question2 = document.getElementById('question2');

      if (input === 'anshita') {
        result.textContent = "‚úÖ Correct! Here's your next question.";
        result.style.color = "#00ffcc";
        question2.classList.remove("hidden");
      } else {
        result.textContent = "‚ùå Better luck next time!";
        result.style.color = "#ff4444";
        question2.classList.add("hidden");
      }
    }

    function checkAnswer2() {
      const input2 = document.getElementById('answer2').value.trim().toLowerCase();
      const result = document.getElementById('resultMessage');

      // Replace this with the real answer
      if (input2 === 'yes') {
        result.innerHTML = "üéâ Send across a text saying 'Hi, The Spam worked!!<br>And I did not find it even a tad bit stupid' ";
        result.style.color = "#00ffcc";
      } else {
        result.textContent = "‚ùå Oops! That's not the right color.";
        result.style.color = "#ff4444";
      }
    }
